@model ThreeAmigos_ExpenseManagement.ViewModels.ExpenseFormViewModel
@{
    ViewBag.Title = "Expense Management System | Approve Expense";
    Layout = "~/Views/Shared/_EM_LayoutPage.cshtml";    
}

@using (Html.BeginForm("ApproveExpenses", "Supervisor", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <div class="panel panel-primary">

        <div class="panel-heading">
            <h3 class="panel-title">View Reports</h3>
        </div>

        <table class="table">
            @foreach (var ExpenseReport in Model.ExpenseReports)
            {	            
                <tr class="info">
                    <th>Report Date: @String.Format("{0:dd/MM/yyyy}", ExpenseReport.CreateDate)</th>
                    <th>Consultant : @ExpenseReport.CreatedBy.Fullname</th>
                    <th>Department: @ExpenseReport.Department.DepartmentName</th>
                    <th>Status : @ExpenseReport.Status</th>
                    <th></th>
                </tr>
                <tr>
                    <th></th>
                    <th>Expense Date</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Amount (AUD)</th>
                </tr>

                foreach (var ExpenseItem in ExpenseReport.ExpenseItems)
                {
                <tr>
                    <td></td>
                    <td>@String.Format("{0:dd/MM/yyyy}", ExpenseItem.ExpenseDate)</td>
                    <td>@ExpenseItem.Location</td>
                    <td>@ExpenseItem.Description</td>
                    <td>@ExpenseItem.Amount </td>
                </tr> 
                }
                <tr class="success">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Expense Total:</td>
                    <td>
                        @Html.ActionLink(linkText: "Approve", actionName: "ApproveExpenses", controllerName: "Supervisor", routeValues: new { itemid = ExpenseReport.ExpenseId, act = "Approve" }, htmlAttributes: new { @class = "btn btn-success" })
                        @Html.ActionLink(linkText: "Reject", actionName: "ApproveExpenses", controllerName: "Supervisor", routeValues: new { itemid = ExpenseReport.ExpenseId, act = "Reject" }, htmlAttributes: new { @class = "btn btn-success" })
                    </td>
                </tr>                
                
            }
        </table>
    </div>
    
    <!-- pop modal to to display confirmation when budget limit has been exceeded -->
    <div class="modal fade bs-example-modal-sm" id="BudgetWarningModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <table class="table">
                    <tr>
                        <th colspan="2">Budget Warning</th>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <!--label to go here -->
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <!--Approved button-->
                        </td>
                        <td>
                            <!--Close button-->
                        </td>
                    </tr>
                </table>
                <p>
                </p>
            </div>
        </div>
    </div>
}

